
{
  "entities": {
    "Lead": {
      "title": "Lead",
      "type": "object",
      "description": "Represents a potential client or sales opportunity in the Strategic Pipeline Engine.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "company": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "source": { "type": "string", "enum": ["Instagram", "WhatsApp", "Referral", "Website", "Cold Call", "Ads"] },
        "industry": { "type": "string" },
        "estimatedBudget": { "type": "number" },
        "status": { "type": "string", "enum": ["New", "Contacted", "Pitch", "Proposal Sent", "Negotiation", "Won", "Lost"] },
        "assignedTo": { "type": "string" },
        "priority": { "type": "string", "enum": ["Low", "Medium", "High", "Hot"] },
        "tags": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "array", "items": { "type": "string" } },
        "nextFollowUpDate": { "type": "string", "format": "date-time" },
        "lastContactedAt": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "email", "status", "priority", "createdAt"]
    },
    "FollowUp": {
      "title": "FollowUp",
      "type": "object",
      "description": "Records a specific sales engagement activity for a lead.",
      "properties": {
        "id": { "type": "string" },
        "leadId": { "type": "string" },
        "type": { "type": "string", "enum": ["Call", "WhatsApp", "Email", "Meeting"] },
        "scheduledAt": { "type": "string", "format": "date-time" },
        "completed": { "type": "boolean" },
        "remarks": { "type": "string" },
        "outcome": { "type": "string" },
        "nextFollowUpDate": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "leadId", "type", "scheduledAt", "completed"]
    },
    "Campaign": {
      "title": "Campaign",
      "type": "object",
      "description": "Tracks marketing campaign performance and ROI.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "channel": { "type": "string", "enum": ["Meta Ads", "Google Ads", "Organic", "Referral"] },
        "budget": { "type": "number" },
        "leadsGenerated": { "type": "number" },
        "conversions": { "type": "number" },
        "ROI": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "channel", "budget"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      { "path": "/leads/{leadId}", "definition": { "entityName": "Lead", "description": "Lead management collection." } },
      { "path": "/followUps/{followUpId}", "definition": { "entityName": "FollowUp", "description": "Sales engagement activities." } },
      { "path": "/campaigns/{campaignId}", "definition": { "entityName": "Campaign", "description": "Marketing campaign performance." } }
    ]
  }
}
