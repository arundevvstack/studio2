
{
  "entities": {
    "TalentProfile": {
      "title": "TalentProfile",
      "type": "object",
      "description": "A creative professional profile within the Shoot Network.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "age": { "type": "string" },
        "district": { "type": "string" },
        "category": { "type": "string" },
        "gender": { "type": "string" },
        "colabCategories": { "type": "array", "items": { "type": "string" } },
        "suitableProjectTypes": { "type": "array", "items": { "type": "string" } },
        "paymentStage": { "type": "string" },
        "referredBy": { "type": "string" },
        "socialMediaContact": { "type": "string" },
        "portfolio": { "type": "string" },
        "thumbnail": { "type": "string" },
        "rank": { "type": "number", "minimum": 1, "maximum": 5 },
        "projectCount": { "type": "number" },
        "gallery": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "url": { "type": "string" },
              "type": { "type": "string", "enum": ["image", "video"] }
            }
          } 
        },
        "isArchived": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "district", "category"]
    },
    "Project": {
      "title": "Project",
      "type": "object",
      "description": "A media production project entity.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "clientId": { "type": "string" },
        "description": { "type": "string" },
        "budget": { "type": "number" },
        "status": { "type": "string" },
        "location": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "crew": { 
          "type": "array", 
          "items": {
            "type": "object",
            "properties": {
              "talentId": { "type": "string" },
              "name": { "type": "string" },
              "category": { "type": "string" },
              "role": { "type": "string" },
              "thumbnail": { "type": "string" }
            }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/shoot_network/{talentId}": {
      "schema": "TalentProfile",
      "description": "Collection of verified creative talent profiles."
    },
    "/projects/{projectId}": {
      "schema": "Project",
      "description": "Production project entities."
    },
    "/clients/{clientId}": {
      "schema": "any",
      "description": "Client entities."
    },
    "/leads/{leadId}": {
      "schema": "any",
      "description": "Pipeline leads."
    },
    "/teamMembers/{memberId}": {
      "schema": "any",
      "description": "Internal team members."
    },
    "/roles_admin/{userId}": {
      "schema": "any",
      "description": "Administrative roles mapping."
    }
  }
}
