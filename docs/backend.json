
{
  "entities": {
    "TeamMember": {
      "title": "TeamMember",
      "type": "object",
      "description": "An internal staff member or regular freelance collaborator.",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "roleId": { "type": "string" },
        "type": { "type": "string", "enum": ["In-house", "Freelancer"] },
        "status": { "type": "string" },
        "thumbnail": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["firstName", "lastName", "email", "roleId"]
    },
    "Project": {
      "title": "Project",
      "type": "object",
      "description": "A media production project entity.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "clientId": { "type": "string" },
        "description": { "type": "string" },
        "budget": { "type": "number" },
        "status": { "type": "string" },
        "location": { "type": "string" },
        "progress": { "type": "number" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "crew": { 
          "type": "array", 
          "items": {
            "type": "object",
            "properties": {
              "talentId": { "type": "string" },
              "name": { "type": "string" },
              "category": { "type": "string" },
              "role": { "type": "string" },
              "stage": { "type": "string" },
              "thumbnail": { "type": "string" },
              "type": { "type": "string", "enum": ["External", "Internal"] }
            }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "Task": {
      "title": "Task",
      "type": "object",
      "description": "A production objective or milestone.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "phase": { "type": "string" },
        "priority": { "type": "string", "enum": ["Low", "Medium", "High"] },
        "status": { "type": "string", "enum": ["Active", "Completed"] },
        "assignedRole": { "type": "string" },
        "assignedMemberId": { "type": "string" },
        "dueDate": { "type": "string" },
        "comments": { "type": "string" },
        "subActivities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "completed": { "type": "boolean" }
            }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "SidebarItem": {
      "title": "SidebarItem",
      "type": "object",
      "description": "A customized navigation item for the workspace sidebar.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "iconName": { "type": "string" },
        "url": { "type": "string" },
        "order": { "type": "number" },
        "isVisible": { "type": "boolean" }
      },
      "required": ["title", "url", "iconName"]
    },
    "ProjectSettings": {
      "title": "ProjectSettings",
      "type": "object",
      "description": "Global configuration for project workflows and metadata.",
      "properties": {
        "projectTypes": { "type": "array", "items": { "type": "string" } },
        "districts": { "type": "array", "items": { "type": "string" } },
        "phases": { "type": "array", "items": { "type": "string" } },
        "defaultCurrency": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/projects/{projectId}": {
      "schema": "Project",
      "description": "Production project entities."
    },
    "/projects/{projectId}/tasks/{taskId}": {
      "schema": "Task",
      "description": "Phase-specific production objectives."
    },
    "/clients/{clientId}": {
      "schema": "any",
      "description": "Client entities."
    },
    "/leads/{leadId}": {
      "schema": "any",
      "description": "Pipeline leads."
    },
    "/teamMembers/{memberId}": {
      "schema": "TeamMember",
      "description": "Internal team members."
    },
    "/sidebar_items/{itemId}": {
      "schema": "SidebarItem",
      "description": "Dynamic sidebar navigation items."
    },
    "/settings/projects": {
      "schema": "ProjectSettings",
      "description": "Global project configuration."
    }
  }
}
