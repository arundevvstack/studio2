rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * MEDIAFLOW SECURITY MODEL (PROTOTYPE VERSION)
     * 
     * Full read/write access allowed for authenticated users during development.
     * This ensures the prototype functions smoothly without complex role checks.
     */
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}