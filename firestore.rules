rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // STRATEGIC BYPASS: Allow authenticated users full access to ALL collections for testing
    // Deployment Trigger: 2026-02-24T09:30:00Z
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Deny unauthenticated access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}