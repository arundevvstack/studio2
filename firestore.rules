
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * PROTOTYPE SECURITY POLICY
     * This ruleset is optimized for development and prototyping.
     * It allows any authenticated user to read and write to all collections.
     */

    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Explicit path matches for clarity and metadata tracking
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /teamMembers/{memberId} {
      allow read, write: if request.auth != null;
    }

    match /roles/{roleId} {
      allow read, write: if request.auth != null;
    }

    match /sidebar_items/{itemId} {
      allow read, write: if request.auth != null;
    }

    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }

    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }

    match /companyBillingSettings/{id} {
      allow read, write: if request.auth != null;
    }
  }
}
