
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MEDIAFLOW STRATEGIC SECURITY CORE
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to get the user's registry document
    function getUserData() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(userPath) ? get(userPath).data : null;
    }

    // Authoritative check for Strategic Permit & Active Status
    function hasStrategicPermit() {
      let user = getUserData();
      let isMaster = request.auth.token.email == "defineperspective.in@gmail.com";
      return isSignedIn() && (
        isMaster ||
        (request.auth.token.strategicPermit == true && request.auth.token.status == "active") ||
        (user != null && user.strategicPermit == true && user.status == "active")
      );
    }

    // Check for Root Administrative Authority
    function isAdmin() {
      let user = getUserData();
      let isMaster = request.auth.token.email == "defineperspective.in@gmail.com";
      return isSignedIn() && (
        isMaster ||
        request.auth.token.role == "admin" ||
        (user != null && user.role == "admin")
      );
    }

    /**
     * IDENTITY & AUTHORIZATION REGISTRY
     */
    match /users/{userId} {
      // get: Allow user to read own doc or Admin to read any
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      // list: ONLY Admins can list the registry collection
      allow list: if isSignedIn() && isAdmin();
      // update: User updates self or Admin updates any
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      // create: User creates self during sign-up
      allow create: if isSignedIn() && request.auth.uid == userId;
      // delete: Admin only
      allow delete: if isSignedIn() && isAdmin();
    }

    /**
     * ORGANIZATIONAL INFRASTRUCTURE
     */
    match /teamMembers/{memberId} {
      allow get: if isSignedIn() && (request.auth.uid == memberId || isAdmin());
      allow list: if isSignedIn() && (hasStrategicPermit() || isAdmin());
      allow update: if isSignedIn() && (request.auth.uid == memberId || isAdmin());
      allow create: if isSignedIn() && (request.auth.uid == memberId || isAdmin());
      allow delete: if isSignedIn() && isAdmin();
      
      match /sessions/{sessionId} {
        allow read, write: if isSignedIn() && request.auth.uid == memberId;
      }
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && isAdmin();
    }

    /**
     * CORE PRODUCTION ENTITIES
     */
    match /projects/{projectId} {
      allow read, write: if hasStrategicPermit() || isAdmin();
      
      match /tasks/{taskId} {
        allow read, write: if hasStrategicPermit() || isAdmin();
      }
    }

    match /clients/{clientId} {
      allow read, write: if hasStrategicPermit() || isAdmin();
      
      match /invoices/{invoiceId} {
        allow read, write: if hasStrategicPermit() || isAdmin();
      }
    }

    match /leads/{leadId} {
      allow read, write: if hasStrategicPermit() || isAdmin();
    }

    match /talents/{talentId} {
      allow read, write: if hasStrategicPermit() || isAdmin();
    }

    match /shoot_network/{talentId} {
      allow read, write: if hasStrategicPermit() || isAdmin();
    }

    match /proposals/{proposalId} {
      allow read, write: if hasStrategicPermit() || isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * APP CONFIGURATION & SETTINGS
     */
    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /companyBillingSettings/{id} {
      allow read: if isSignedIn() && (hasStrategicPermit() || isAdmin());
      allow write: if isAdmin();
    }

    match /workflowSettings/{id} {
      allow read: if isSignedIn() && (hasStrategicPermit() || isAdmin());
      allow write: if isAdmin();
    }

    /**
     * PIPELINE & MARKETING INTELLIGENCE
     */
    match /followUps/{id} {
      allow read, write: if hasStrategicPermit() || isAdmin();
    }

    match /campaigns/{id} {
      allow read, write: if hasStrategicPermit() || isAdmin();
    }
  }
}
