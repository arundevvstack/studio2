
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MEDIAFLOW STRATEGIC PERMIT RULES
     * 
     * Access requires:
     * 1. Auth token claims or User document: strategicPermit == true
     * 2. Auth token claims or User document: status == "active"
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Authoritative check against the user document for real-time consistency
    function hasStrategicPermit() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return userDoc.strategicPermit == true && userDoc.status == "active";
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      // Users can create their initial pending record on sign-up
      allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.status == "pending";
      // Only admins can update role, status, and permits
      allow update: if isSignedIn() && isAdmin();
      allow delete: if false;
    }

    match /projects/{projectId} {
      allow read, write: if isSignedIn() && hasStrategicPermit();
    }

    match /clients/{clientId} {
      allow read, write: if isSignedIn() && hasStrategicPermit();
    }

    match /invoices/{invoiceId} {
      allow read, write: if isSignedIn() && hasStrategicPermit();
    }

    match /leads/{leadId} {
      allow read, write: if isSignedIn() && hasStrategicPermit();
    }

    match /talents/{talentId} {
      allow read, write: if isSignedIn() && hasStrategicPermit();
    }
  }
}
