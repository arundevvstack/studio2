rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * MEDIAFLOW SECURITY MODEL (PROTOTYPE VERSION)
     * 
     * In the prototype phase, we permit broad read access to ensure 
     * the dashboard, boards, and client engagements are always visible.
     * Write access is secured to authenticated users.
     */

    // --- GLOBAL HELPER FUNCTIONS ---

    /** @description Checks if the user is authenticated. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the provided ID matches the authenticated user's UID. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** @description Broad check for team membership in prototype phase. */
    function isTeamMember() {
      return isSignedIn();
    }

    // --- COLLECTION RULES ---

    // Global Roles
    match /roles/{roleId} {
      allow read: if true;
      allow write: if isTeamMember();
    }

    // Team Member Profiles
    match /team_members/{teamMemberId} {
      allow read: if true;
      allow create, update: if isOwner(teamMemberId);
      allow delete: if false;
    }

    // Strategic Clients
    match /clients/{clientId} {
      allow read: if true;
      allow write: if isTeamMember();

      // Client-specific Invoices
      match /invoices/{invoiceId} {
        allow read: if true;
        allow write: if isTeamMember();

        match /line_items/{lineItemId} {
          allow read: if true;
          allow write: if isTeamMember();
        }
      }
    }

    // Production Projects
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isTeamMember();

      // Project Tasks
      match /tasks/{taskId} {
        allow read: if true;
        allow write: if isTeamMember();

        // Time tracking within tasks
        match /time_entries/{timeEntryId} {
          allow read: if true;
          allow write: if isTeamMember();
        }
      }
    }

    // Communication Logs
    match /communication_logs/{logId} {
      allow read: if true;
      allow write: if isTeamMember();
    }
  }
}