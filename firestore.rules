rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users full access to shoot_network
    match /shoot_network/{docId} {
      allow get, list, create, update, delete: if request.auth != null;
    }

    // Provision access for other essential production collections
    match /projects/{docId} {
      allow get, list, create, update, delete: if request.auth != null;
    }
    
    match /projects/{projectId}/tasks/{taskId} {
      allow get, list, create, update, delete: if request.auth != null;
    }
    
    match /clients/{docId} {
      allow get, list, create, update, delete: if request.auth != null;
    }
    
    match /leads/{docId} {
      allow get, list, create, update, delete: if request.auth != null;
    }
    
    match /teamMembers/{docId} {
      allow get, list, create, update, delete: if request.auth != null;
    }

    // Block access to everything else
    match /{document=**} {
      allow read, write: if false;
    }

  }
}