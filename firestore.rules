rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // FORCE SYNC TRIGGER: 2026-02-24T08:45:00Z
    // Explicitly allow authenticated users to list and read shoot_network
    // Optimized for custom token authentication without email verification constraints
    match /shoot_network/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to access other production collections
    match /projects/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /clients/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /leads/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /teamMembers/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}